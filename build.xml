<?xml version="1.0"?>
<project name="ChessGame" default="info">
  <property name="src.dir" value="src"/>
  <property name="build.dir" value="build"/>
  <property name="jar.dir" value="${build.dir}/jar"/>
  <property name="jar.name" value="ChessGame.jar"/>
  <property name="mainclass.name" value="com.tuantai0625.chessgame.Main"/>
  
  <target name="info">
    <echo>Chess Game - Made by Le Tuan Tai - HCMUS</echo>
  </target>
  
  <target name="clean">
    <delete dir="${build.dir}"/>
  </target>
   
  <target name="compile" description="Compile java source files">
    <mkdir dir="${build.dir}"/>
	<copy todir="${build.dir}">
      <fileset dir="${src.dir}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
	<javac srcdir="${src.dir}" destdir="${build.dir}"/>
  </target>
  
  <target name="jar">
    <mkdir dir="${jar.dir}"/>
    <jar destfile="${jar.dir}/${jar.name}" basedir="${build.dir}">
      <manifest>
        <attribute name="Main-Class" value="${mainclass.name}"/>
      </manifest>
    </jar>
  </target>
  
  <target name="run">
    <java jar="${jar.dir}/${jar.name}" fork="true"/>
  </target>
   
</project>